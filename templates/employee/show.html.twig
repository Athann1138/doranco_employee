{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ employee.firstname }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ employee.name }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ employee.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ employee.adresse }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ employee.poste }}</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ employee.salaire }}</td>
            </tr>
            <tr>
                <th>Date_de_naissance</th>
